@{
    ViewBag.Title = "Welcome to ClassCloud";
}
@model IEnumerable<FreeTime.Models.Course>

<div class="wrapper col4">
    <script>
        $(document).ready(function () {
            VM.index.initModule();
    });
    </script>
    <div class="container">
        <div id="content">
            <div id="featured_post">
                <p>@ViewBag.Title.</p>
                <p>@ViewBag.Message</p>
                <p>Current Courses Offered:</p>
                <table>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                        <th>@Html.DisplayNameFor(model => model.First().CourseID)</th>
                        <th>@Html.DisplayNameFor(model => model.First().ID)</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CourseID)
                            </td>

                            <th>
                                @Html.DisplayFor(modelItem => item.ID)
                            </th>

                        </tr>
                    }
                </table>
            </div>
        </div>
        <div id="column">
            <ul id="latestnews">
                <li>
                    <p>
                        Search for notes
                        <button data-bind="click: searchVM.test"></button>
                    </p>
                </li>

                <li>
                    <p>
                        Search for classes
                    </p>
                </li>
            </ul>
        </div>
        <br class="clear">
    </div>
    <br class="clear">
</div>
